<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IHerb_BAD.MVVM.View.Start"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Image Source="StartLogo.jpg" Aspect="AspectFill"/>
            <Frame Margin="0,550,0,0" BackgroundColor="#ffeead"/>
            <Frame Margin="0,350,0,0" CornerRadius="35" BackgroundColor="#ffeead">
            <StackLayout Orientation="Vertical">
            
            <Button Text="Вход" 
                    CornerRadius="25" 
                    BackgroundColor="#E3C13C" 
                    TextColor="White"
                    Command="{Binding Login}"
                    Margin="20,10,20,0"/>
            <Button Text="Регистрация" 
                    TextColor="White" 
                    CornerRadius="25" 
                    BackgroundColor="#E3C13C"
                    Margin="20,10,20,0"/>
            <Button Text="Вход с I-Herb"
                    TextColor="#E3C13C"
                    BackgroundColor="Transparent"
                    BorderColor="#E3C13C"
                    BorderWidth="3"
                    CornerRadius="20"
                    Margin="20,10,20,0"/>
            <Label Text="{Binding Name}"/>
            </StackLayout>
            </Frame>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>