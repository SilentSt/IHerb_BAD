<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IHerb_BAD.MVVM.View.LoginView"
             Title="none">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="I_HerbLogo.jpg"/>
            <Button Text="Вход" 
                    CornerRadius="25" 
                    BackgroundColor="#7aba56" 
                    TextColor="White"/>
            <Button Text="Регистрация" 
                    TextColor="Green" 
                    CornerRadius="25" 
                    BackgroundColor="#7aba56"/>
            <Button Text="Вход с I-Herb"
                    TextColor="#7aba56"
                    BackgroundColor="Bisque"
                    CornerRadius="15"/>
            <Label Text="{Binding Name}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>